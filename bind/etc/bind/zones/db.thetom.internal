$TTL    1d ; default expiration time (in seconds) of all RRs without their own TTL value
$ORIGIN thetom.internal. ; base domain-name
@       IN      SOA     ns1.thetom.internal. root.thetom.internal. (
                  3      ; Serial
                  1d     ; Refresh
                  1h     ; Retry
                  1w     ; Expire
                  1h )   ; Negative Cache TTL

; name servers - NS records
     IN      NS      ns1.thetom.internal.

; name servers - A records
ns1.thetom.internal.             IN      A      172.31.1.4
ns1.thetom.internal.             IN      A      192.168.40.130

unbound1.thetom.internal.        IN      A      172.31.1.2
pihole1.thetom.internal.        IN      A      172.31.1.3
pihole1.thetom.internal.        IN      A      192.168.40.130
dns1.thetom.internal.             IN      A      172.31.1.4
